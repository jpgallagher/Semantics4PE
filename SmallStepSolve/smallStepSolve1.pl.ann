logen(clpClause/3,clpClause(29,lt(A,B,0),[A>=B])).
logen(clpClause/3,clpClause(30,gte(A,B,1),[A>=B])).
logen(clpClause/3,clpClause(31,gte(A,B,0),[A<B])).
